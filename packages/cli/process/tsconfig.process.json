{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

{
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "**/*.jsx": {
      "when": "$(basename).tsx"
    },
    "**/*.jsx.map": {
      "when": "$(basename)"
    },
    "**/*.d.ts": true,
    "**/*.d.ts.map": true
  }
}
